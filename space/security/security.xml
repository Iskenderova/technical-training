<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_space_crew" model="res.groups">
            <field name="name">Space Crew</field>
            <field name="category_id" ref="base.module_category_mission"/>
            <field name="implied_ids" eval="[(6,0, [ref('base.group_user')])]" />
        </record>
        
        <record id="group_space_captain" model="res.groups">
            <field name="name">Space Captain</field>
            <field name="category_id" ref="base.module_category_mission"/>
            <field name="implied_ids" eval="[(6,0, [ref('space.group_space_crew')])]" />
        </record>
        
        <record id="group_space_admin" model="res.groups">
            <field name="name">Space Admin</field>
            <field name="category_id" ref="base.module_category_mission"/>
            <field name="implied_ids" eval="[(6,0, [ref('space.group_space_captain')])]" />
        </record>

        <record id="space_crews_see_only_own_missions" model="ir.rule">
            <field name="name">Space crews can see missions in which they are a member</field>
            <field name="model_id" ref="space.model_space_mission"/>
            <field name="domain_force">[('team_member_id','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('space.group_space_crew'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="space_captain_see_only_own_missions" model="ir.rule">
            <field name="name">Space captain can see only own missions</field>
            <field name="model_id" ref="space.model_space_mission"/>
            <field name="domain_force">[('captain','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('space.group_space_captain'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
              
        <record id="space_admin_can_see_all_missions" model="ir.rule">
            <field name="name">Space admin can see all missions</field>
            <field name="model_id" ref="space.model_space_mission"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('space.group_space_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
