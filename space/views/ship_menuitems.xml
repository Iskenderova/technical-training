<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="ship_list_action">
            <field name="name">Spaceship</field>
            <field name="res_model">space.spaceship</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontext_smiling_face">
                    Add a first spaceship
                </p>
            </field>
        </record>
        
        <record model="ir.ui.view" id="space_mission_graph_view">
            <field name="name">space.mission.graph</field>
            <field name="model">space.mission</field>
            <field name="arch" type="xml">
                <graph string="Metrics">
                    <field name="fuel_needed" type="measure"/>
                    <field name="engine" type="measure"/>
                    <field name="safety" type="measure"/>
                </graph>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="mission_list_action">
            <field name="name">Mission</field>
            <field name="res_model">space.mission</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontext_smiling_face">
                    Add a first mission
                </p>
            </field> 
        </record>
        
        
        <menuitem name="Space"
                  id="menu_space"
                  web_icon="space,static/icon.png"
                  sequence="1"/>
        
        <menuitem id="menu_space_sub" name="Space" parent="menu_space" sequence="2"/>
        
        <menuitem id="menu_space_spaceship" name="Spaceship" parent="menu_space_sub" sequence="3"
                  action="ship_list_action"/>
        
        <menuitem id="menu_space_mission" name="Mission" parent="menu_space_sub" sequence="4" 
                  action="mission_list_action"/>        
        
    </data>
</odoo>
